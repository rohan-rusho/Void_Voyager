<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base: deep purple to magenta -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#4A148C"
                android:endColor="#F50057" />
        </shape>
    </item>

    <!-- Soft top glow with pink/orange -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:centerX="50%"
                android:centerY="0%"
                android:startColor="#C55200"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Vignette around edges for depth, purple -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1200dp"
                android:centerX="50%"
                android:centerY="60%"
                android:startColor="#00000000"
                android:endColor="#6A1B9A" />
        </shape>
    </item>

    <!-- Bottom shadow band: deep pink -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#4E082F"
                android:endColor="#00000000" />
        </shape>
    </item>

</layer-list>
