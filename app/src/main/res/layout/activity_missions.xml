<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollMissions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="18dp">

    <LinearLayout
        android:id="@+id/containerMissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal">

        <!-- Title Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTitleMissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="30dp"
            cardView:cardElevation="14dp"
            cardView:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp"
                android:background="@drawable/card_bg">

                <ImageView
                    android:id="@+id/imgMissions"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/ic_missions"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/tvMissionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Space Missions"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Definition / Overview -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMissionsOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingMissionsOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What Are Space Missions?"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#AEEA00"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMissionsOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Space missions are scientific or exploratory journeys carried out using rockets, probes, rovers, telescopes, or crewed spacecraft to study planets, moons, stars, and beyond."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Historic Milestones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMissionsHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingMissionsHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historic Milestones"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMissionsHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Sputnik 1 (1957): First artificial satellite\n• Apollo 11 (1969): First humans on the Moon\n• Voyager 1 (1977): Now in interstellar space\n• Hubble (1990): Deep universe imaging\n• Mars Pathfinder (1997): First Mars rover era\n• ISS (1998–): Long-term microgravity lab"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Types of Missions -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMissionsTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingMissionsTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission Types"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMissionsTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Orbiter: Circles a planet/moon (e.g., Mars Odyssey)\n• Lander: Touches down (e.g., Viking, InSight)\n• Rover: Moves across surface (e.g., Curiosity, Perseverance)\n• Probe/Flyby: Passes targets (e.g., New Horizons)\n• Telescope: Observes from space (e.g., Hubble, JWST)\n• Crew Mission: Humans (e.g., Apollo, Artemis, ISS)"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Why Missions Matter -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMissionsImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingMissionsImportance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why Missions Matter"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMissionsImportance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They expand knowledge of origins, climates, geology, life’s potential, technology innovation, global cooperation, and inspire future explorers."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Current / Recent Missions -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMissionsRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingMissionsRecent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent &amp; Ongoing"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMissionsRecent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Perseverance (Mars rover)\n• James Webb Space Telescope (deep universe)\n• Artemis (returning humans to the Moon)\n• Lunar Gateway (planned orbit station)\n• JUICE (Jupiter icy moons)\n• Dragon &amp; Starliner (commercial crew)"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fun Facts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMissionsFunFacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingMissionsFunFacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Facts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMissionsFunFacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Voyager 1 carries the Golden Record.\n• Apollo computers were weaker than phones today.\n• Perseverance stores samples for future return.\n• JWST observes in infrared to see early galaxies.\n• Some CubeSats hitch rides on larger rockets."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explore CTA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMissionsExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/headingMissionsExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore the Missions!"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMissionsExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Follow humanity’s path from early rockets to deep-space probes and the next steps toward the Moon and Mars."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Share Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShareMissions"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>